# Environment Configuration
NODE_ENV=development
STAGE=local

# API Configuration
API_BASE_URL=http://localhost:4000/v1
FRONTEND_URL=http://localhost:3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Database Configuration
DYNAMODB_ENDPOINT=http://localhost:4566
DYNAMODB_TABLE_PREFIX=codexflow-local
MONGODB_URI=mongodb://admin:password@localhost:27017
REDIS_URL=redis://localhost:6379

# Authentication (AWS Cognito)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
COGNITO_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# S3 Buckets
S3_BUCKET_ASSETS=codexflow-local-assets
S3_BUCKET_UPLOADS=codexflow-local-uploads

# API Keys (DO NOT COMMIT REAL VALUES)
GITHUB_OAUTH_CLIENT_ID=your_github_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# AI/ML Configuration
SAGEMAKER_ENDPOINT=codexflow-local-risk-analyzer
BEDROCK_MODEL_ID=anthropic.claude-v2

# Monitoring
SENTRY_DSN=https://xxxx@sentry.io/xxxxx
LOG_LEVEL=debug

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_INTEGRATIONS=false
ENABLE_ANALYTICS=true

# Local Development
USE_LOCAL_SERVICES=true
MOCK_AUTH=false
